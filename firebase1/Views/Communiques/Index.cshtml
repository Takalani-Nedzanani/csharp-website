                  <button type="button" class="btn btn-success btn-lg btn-block">  @Html.ActionLink("Delete", "Delete", new { id = item.CommuniqueId }) </button>
                </td>

            </tr>

        }

    </table>

    <div class="back">
    <button type="button" class="btn btn-success btn-lg btn-block"> @Html.ActionLink("Back", "Index", "Home", new { area = "" }, new { @class = "nav-link" }) </button>
        </div>


</body>


@section Scripts {

    @*@summernote*@
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.summernote').summernote();
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}
